<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ziddan.indoxxi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.INDOXXI">
        <activity android:name=".ui.favorite.mainfav.FavoriteActivity"></activity>
        <activity
            android:name=".ui.detail.DetailTvActivity"
            android:label="@string/title_activity_detail_tv"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.INDOXXI.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.DetailShowActivity"
            android:label="@string/title_activity_detail_show"
            android:parentActivityName=".ui.main.MainActivity"
            android:theme="@style/Theme.INDOXXI.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity" />
        </activity>
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>